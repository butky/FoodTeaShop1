@model FoodTeaShop1.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Trở về trang chủ" href="/">Trang chủ</a><span>&raquo;</span></li>
                    <li><strong>Đăng nhập</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
 






<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <div class="box-authentication">
                    <h4>Đăng nhập</h4>
                    <p class="before-login-text">Chào mừng bạn đến với FoodTea</p>


                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Tài khoản-->
                    <label for="emmail_login">Tên đăng nhập<span class="required">*</span></label>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                    <!-- Mật khẩu-->
                    <label for="password_login">Mật khẩu<span class="required">*</span></label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @Type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


                    <p class="forgot-pass"><a>Quên mật khẩu?</a></p>


                    <button class="button"><i class="icon-lock icons"></i>&nbsp; <span>Login</span></button>
                    <a class="btn btn-facebook" href="/User/LoginFacebook">
                        <i class="fa fa-facebook"></i>
                        Đăng nhập bằng Facebook
                    </a><br />
                    <label class="inline" for="rememberme">
                        <input type="checkbox" value="forever" id="rememberme" name="rememberme">
                        Nhớ mật khẩu
                    </label>
                </div>
                }



                <div class="box-authentication">
                    <h4>Đăng ký</h4>
                    <p>Tạo tài khoản riêng bạn</p>


                    <label for="emmail_register">Email<span class="required">*</span></label>
                    <input id="emmail_register" type="text" class="form-control">
                    <button class="button"><i class="icon-user icons"></i>&nbsp; <span>Đăng ký</span></button>
                    <div class="register-benefits">
                        <h5>Đăng ký ngay hôm nay và bạn có thể :</h5>
                        <ul>
                            <li>Tăng tốc theo cách của bạn thông qua thanh toán</li>
                            <li>Theo dõi đơn hàng của bạn một cách dễ dàng</li>
                            <li>Giữ một bản ghi của tất cả các giao dịch mua của bạn</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->
<!-- Banner Dưới -->
