@model PagedList.IPagedList<Model.EF.Content>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản lý tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách tin tức
}

@section jsFooter{
    
}

<div class="left_col" role="main">
    <div class="">

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Responsive example<small>Users</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">


                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>

                                    <th>Tiêu đề</th>
                                    <th>Hình ảnh</th>
                                    <th>Ngày đăng</th>
                                    <th>Trạng Thái</th>
                                    <th>*</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">

                                        <td>@item.Name</td>
                                        <td>@item.Image</td>
                                        <td>@item.CreatedDate</td>
                                        <td>
                                        <a href="#" class="btn-active" data-id="@item.ID">
                                            @Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")
                                            </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/Content/Edit/@item.ID" type="button" class="btn btn-round btn-info">Sửa</a>

                                            @Ajax.ActionLink("Xóa", "Delete",new { @id = item.ID}, new AjaxOptions
                                       {

                                           Confirm="Bạn có muốn xóa bản ghi này?",
                                           OnComplete = "$('#row_"+item.ID+"').remove()",
                                           HttpMethod = "Delete"
                                       }, new { @class = "btn btn-round btn-danger" })



                                        </td>


                                    </tr>

                                }

                            </tbody>
                        </table>
                        <a href="/Admin/User/Create" type="button" class="btn btn-round btn-success">Tạo User</a>

                        @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>